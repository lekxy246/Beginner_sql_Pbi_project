---- popular product -----

select pizza_name, Count(pizza_name) as orders
from pizza_sales
group by pizza_name
order by orders desc;

select pizza_size, count(pizza_size) as `size count`
from pizza_sales
group by pizza_size
order by `size count` desc;

select pizza_category, count(pizza_category) as `category count`
from pizza_sales
group by pizza_category
order by `category count` desc;
